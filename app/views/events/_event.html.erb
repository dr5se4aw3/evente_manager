<%= link_to event_path(event), class: "event_container" do %>
  <div class="event_image_thumbnail">
    <% if event.event_image.url %>
      <%= image_tag event.event_image.url %>
    <% else %>
      <%= image_tag 'no_image.jpg' %>
    <% end %>
  </div>

  <div class="event_infomation">
    <p><%= event.title %></p>
    <p><%= l event.started_at,format: :long %></p>
    <p class="host_user">
      <%= "運営：#{event.user.name}" %>
      <% if current_user.id == event.user_id %>
        <br><span>あなたが主催者です</span>
      <% end %>
    </p>
    <% if event.participate_users.include?(current_user) %>
      <p class="participated">
        参加済み
      </p>
    <% end %>
  </div>
<% end %>
