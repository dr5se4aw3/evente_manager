<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.text_field :date %>
  </div>

  <div class="field">
    <%= form.label :started_at %>
    <%= form.text_field :started_at %>
  </div>

  <div class="field">
    <%= form.label :closed_at %>
    <%= form.text_field :closed_at %>
  </div>

  <div class="field">
    <%= form.label :venue_name %>
    <%= form.text_field :venue_name %>
  </div>

  <div class="field">
    <%= form.label :venue_address %>
    <%= form.text_field :venue_address %>
  </div>

  <div class="field">
    <%= form.label :venue_url %>
    <%= form.text_field :venue_url %>
  </div>

  <div class="field">
    <%= form.label :event_image %>
    <%= form.file_field :event_image %>
    <%= image_tag(event.event_image.url) if event.event_image && event.event_image.url %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
