
<h1 class="page_top"><%= @user.name %>さんのマイページ</h1>

  <div class="calendar border_double">
    <h3>参加・主催予定イベント一覧</h3>
    <%= month_calendar(attribute: :started_at, events: @events) do |date, events| %>
      <%= date.to_s(:date) %>

      <% events.each do |event| %>
        <div>
          <%= link_to event.title, event_path(event) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
